{
    "compilerOptions": {
        "allowUnusedLabels": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "removeComments": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "test",
        ".vscode-test"
    ]
}
